<form method="post" action="/songs">
  Name: <input type="text" id="Name" name="song[name]"></input><br/>
  Genres:<br/>
  <% @genres.each do |genre| %>
    <%= genre.name %><input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"><br/>
  <% end %>
  Artist:<br/>
  <% @artists.each do |artist| %>
    <%= artist.name %><input id="<%= artist.name %>" type="radio" name="song[artist_id]" value="<%= artist.id %>"><br/>
  <% end %>
  Or enter Artist:<input id="Artist Name" type="text" name="artist[name]"></input>


  <input type="submit" value="Create">
</form>
