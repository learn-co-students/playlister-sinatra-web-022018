<form method="post" action="/songs/<%=@song.slug%>">
  <input type="hidden" name="_method" value="PATCH">
  Name: <input type="text" id="Name" name="song[name]" value="<%=@song.name%>"></input><br/>
  Genres:<br/>
  <% @genres.each do |genre| %>
    <%= genre.name %><input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"><br/>
  <% end %>
  Artist:<br/>
  <% @artists.each do |artist| %>
    <%= artist.name %><input id="<%= artist.name %>" type="radio" name="song[artist_id]" value="<%= artist.id %>" <%='checked' if @song.artist == artist %> ><br/>
  <% end %>
  Or enter Artist:<input id="Artist Name" type="text" name="artist[name]"></input>


  <input type="submit" value="Save">
</form>
